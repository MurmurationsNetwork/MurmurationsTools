{
  "name": "murmurations-tools",
  "version": "1.0.0",
  "license": "GPLv3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .js --ext .jsx .",
    "lint-fix": "eslint --ignore-path .gitignore --ext .js --ext .jsx . --fix",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json)\"",
    "format": "npm run prettier -- --write",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "npm run lint-fix",
      "npm run format"
    ]
  },
  "dependencies": {
    "@murmurations/jsig": "^1.0.9",
    "@murmurations/jsrfg": "^1.0.7",
    "@remix-run/node": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@remix-run/serve": "^2.16.5",
    "bcryptjs": "^3.0.2",
    "cuid": "^3.0.0",
    "isbot": "^5.1.25",
    "mongodb": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.5",
    "@remix-run/eslint-config": "^2.16.5",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.14",
    "vite": "^6.4.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
